# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload Settings
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Virtual Try-On API Keys
# Option 1: Replicate API (Recommended for virtual try-on)
# Get your key from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=your_replicate_api_token_here

# Option 2: Hugging Face API (Alternative)
# Get your key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# Note: Google AI Studio API keys (Gemini) are NOT used for virtual try-on
# They are for text/chat AI models only

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Model Paths
DLIB_SHAPE_PREDICTOR=models/shape_predictor_68_face_landmarks.dat
HAAR_CASCADE_FACE=models/haarcascade_frontalface_alt.xml
HAAR_CASCADE_EYE=models/haarcascade_eye.xml
